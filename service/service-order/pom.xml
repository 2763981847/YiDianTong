            <artifactId>service_cmn_client</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.oreki</groupId>
            <artifactId>service_user_client</artifactId>
            <version>1.0</version>
        </dependency>
